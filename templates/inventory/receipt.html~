<script>
    function formatNumber(num) {
        return num.toString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
    }

    // Format all prices and total costs on the page
    document.querySelectorAll('.formatted-price, .formatted-total-cost').forEach(element => {
        const price = parseFloat(element.dataset.price || element.dataset.totalCost);
        if (!isNaN(price)) {
            element.querySelector('span').innerText = formatNumber(price.toFixed(2));
        }
    });
</script>
