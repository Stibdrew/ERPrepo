<script>
    document.addEventListener("DOMContentLoaded", function() {
        const price = parseFloat(document.getElementById('product-price').textContent);
        const quantity = parseInt(document.getElementById('quantity-requested').textContent);
        const shippingFee = 2.00; // constant shipping fee

        // Calculate total cost
        const totalCost = price * quantity;
        document.getElementById('total-cost').textContent = totalCost.toFixed(2);

        // Calculate tax (0.1%)
        const tax = totalCost * 0.001;
        document.getElementById('tax').textContent = tax.toFixed(2);

        // Calculate total with tax and shipping
        const totalWithTaxAndShipping = totalCost + tax + shippingFee;
        document.getElementById('total-with-tax-and-shipping').textContent = totalWithTaxAndShipping.toFixed(2);
    });
</script>
