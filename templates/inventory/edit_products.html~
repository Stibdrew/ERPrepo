{% block content %}
<div class="container mt-5">
    <h2>All Products</h2>

    <!-- Product List -->
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Name</th>
                <th>SKU</th>
                <th>Price (in $)</th>
                <th>Available Quantity</th>
                <th>Request Quantity and Action</th>
                <th>Total Cost</th> <!-- New column for total cost -->
            </tr>
        </thead>
        <tbody>
            {% for product in products %}
            <tr>
                <td>{{ product.name }}</td>
                <td>{{ product.sku }}</td>
                <td>${{ product.price|floatformat:2 }}</td> <!-- Format price to 2 decimal places -->
                <td>{{ product.quantity }}</td>
                <td>
                    <form method="POST" action="{% url 'add_product_request' %}">
                        {% csrf_token %}
                        <input type="hidden" name="product_name" value="{{ product.id }}">
                        <div class="input-group">
                            <input type="number" name="quantity" class="form-control quantity-input" data-price="{{ product.price }}" min="1" value="1" required>
                            <button type="submit" class="btn btn-primary">Request</button>
                        </div>
                    </form>
                </td>
                <td>
                    <span class="total-cost" id="total-cost-{{ product.id }}">$ {{ product.price|floatformat:2 }}</span>
                </td> <!-- Total cost -->
            </tr>
            {% empty %}
            <tr>
                <td colspan="6" class="text-center">No products available.</td> <!-- Updated colspan for total cost -->
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>

<!-- JavaScript to update total cost dynamically -->
<script>
    document.addEventListener('DOMContentLoaded', function () {
        // Listen for changes in the quantity input
        document.querySelectorAll('.quantity-input').forEach(function (input) {
            input.addEventListener('input', function () {
                var price = parseFloat(this.getAttribute('data-price'));  // Get price from the input field
                var quantity = parseInt(this.value);  // Get the quantity entered
                var totalCostElement = document.getElementById('total-cost-' + this.closest('tr').querySelector('input[name="product_name"]').value);

                if (!isNaN(price) && !isNaN(quantity) && quantity > 0) {
                    var totalCost = price * quantity;  // Calculate total cost
                    totalCostElement.textContent = '$ ' + totalCost.toFixed(2);  // Update total cost display
                } else {
                    totalCostElement.textContent = '$ 0.00';  // Default if input is invalid
                }
            });
        });
    });
</script>
{% endblock %}